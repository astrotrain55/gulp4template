.youtube
  position relative
  &__ratio
    padding-top 56.25%
    height 0
  &__iframe
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    border 0
    overflow hidden
    background-size cover
    background-position center
    background-repeat no-repeat
  &__play
    position absolute
    left 50%
    top 50%
    width 68px
    height 48px
    margin-left -34px
    margin-top -24px
    cursor pointer
    border 0
    background-color transparent
    padding 0
    opacity 0.8
    filter "alpha(opacity=80)"
    &:focus
      outline 0
      opacity 1
      filter "alpha(opacity=100)"
    &:hover
      .ytp-large-play-button-bg
        transition fill .1s cubic-bezier(0.0,0.0,0.2,1), fill-opacity .1s cubic-bezier(0.0,0.0,0.2,1)
        fill #f00
        fill-opacity 1
    svg
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      pointer-events none
    .ytp-large-play-button-bg
      transition fill .1s cubic-bezier(0.4,0.0,1,1), fill-opacity .1s cubic-bezier(0.4,0.0,1,1)
      fill #212121
      fill-opacity .8

#youtube
  path:first-child
    fill #212121
    &:hover
      fill #f00
  path:last-child
    fill #fff
