{
  "plugins": ["lodash", "only-warn"],
  "extends": ["eslint:recommended", "plugin:lodash/recommended", "airbnb-base"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "no-console": "off"
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "./webpack.config.js"
      },
      "alias": [
        ["libs", "./app-js/libs/"],
        ["store", "./app-js/store/"],
        ["root", "./app-js/"],
        ["components", "./app-components/"],
        ["vendor", "./vendor/"]
      ]
    }
  }
}
